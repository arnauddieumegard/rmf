<plugin>
     <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.emf.ecore.xml"
            file-extensions="reqif"
            id="org.eclipse.rmf.reqif.reqIFXMLFile"
            name="%rmf.reqif.reqIFXMLFile.name"
            priority="normal">
      </content-type>
   </extension>
   
   <!-- Nature for ReqIF projects -->
   
   <extension id="ReqIFNature"
         name="%reqifnature.name"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="org.eclipse.rmf.reqif.ide.natures.ReqIFNature"/>
      </runtime>
   </extension>
  
</plugin>
